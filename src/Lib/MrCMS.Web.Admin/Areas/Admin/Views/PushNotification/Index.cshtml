@using X.PagedList
@using MrCMS.Entities.People
@using X.PagedList.Mvc.Core
@model MrCMS.Web.Admin.Models.PushNotificationSearchModel
@{
    var results = ViewData["results"] as IPagedList<PushNotification> ?? PagingHelper.EmptyList<PushNotification>();
}
<admin-header>
    <row>
        <admin-header-title title="@await Html.Resource("admin - push - notifications", "Push Notifications") "/>

        <admin-header-actions>
            @* <button class="btn btn-primary">@await Html.Resource("admin-save", "Save")</button> *@
        </admin-header-actions>
    </row>
</admin-header>

@* <partial name="_Query" model="Model"/> *@

<table class="table table-striped table-condensed">
    <thead>
    <tr>
        <th>
            Message
        </th>
        <th>
            Url
        </th>
        <th>
            Created By
        </th>
        <th>
            Created Date
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var result in results)
    {
        <tr>
            <td>
                <b>@result.Title</b>
                <br/>
                @result.Body
            </td>
            <td>
                @result.ActionUrl
            </td>
            <td>
                @(result.CreatedBy != null ? result.CreatedBy.Name : "Anonymous")
            </td>
            <td>
                @result.CreatedOn
            </td>
               
        </tr>
    }
    </tbody>
</table>
<hr />
@Html.PagedListPager(results, page => Url.Action("Index", "PushNotification", new {page}), MrCMSPagedListRenderOptions.Bootstrap4)