@model MrCMS.Web.Admin.Models.TaskUpdateData
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml"; }
@using (Html.BeginForm("Edit", "Task", FormMethod.Post))
{
    @Html.HiddenFor(x => x.TypeName)
    <fieldset>
        <legend>
            @await Html.Resource("Admin Tasks Edit", "Edit task")
            <span class="btn-group pull-right">
                <input type="submit" class="btn-primary btn" value="@await Html.Resource("Save")"/>
            </span>
        </legend>
        <div class="form-group">
            <label>Type</label>
            <div>
                @Model.Name
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(task => task.CronSchedule)
            @Html.TextBoxFor(task => task.CronSchedule, new {@class = "form-control"})
            @Html.ValidationMessageFor(task => task.CronSchedule)
        </div>
        <div class="form-group">
            @Html.InlineCheckboxFor(x => x.Enabled)
        </div>
    </fieldset>
}