@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml"; }
@using (Html.BeginForm("Delete", "Notification", FormMethod.Post, new {style = "display:inline;"}))
{
    <h1 class="page-header">
        @await Html.Resource("Admin Notification Delete Title", "Delete Notification")
        <span class="btn-group pull-right">
            <input type="submit" class="btn btn-danger" value="Delete notification"/>
        </span>
    </h1>
    @Html.InfoBlock(await Html.Resource("Heads up") + "!", await Html.Resource("Admin Delete Info Warning", "Deleting this cannot be undone."), AlertType.danger)
}