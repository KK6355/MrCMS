@model System.Collections.Generic.List<MrCMS.HealthChecks.IHealthCheck>
<div class="card">
    <div class="card-body">
        <h4>@await Html.Resource("Admin Health Checks Title", "Health checks")</h4>
        <table class="table table-striped table-condensed" style="overflow: scroll" data-health-check-list="true">
            <thead>
            <tr>
                <th>@await Html.Resource("Status")</th>
                <th>@await Html.Resource("Description")</th>
                <th>@await Html.Resource("Messages")</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var healthCheck in Model)
            {
                <tr data-process-url="@Url.Action("Process", "HealthCheck", new {typeName = healthCheck.TypeName})">
                    <td data-status="true" class="text-center">
                        <i class="fa fa-refresh"></i>
                    </td>
                    <td>@healthCheck.DisplayName</td>
                    <td data-messages="true">
                    <td>
                </tr>
            }
            </tbody>
        </table>

    </div>
</div>