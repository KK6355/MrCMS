@using MrCMS.Entities.Documents.Web
@using MrCMS.Services
@using MrCMS.Web.Admin.Models
@model AddWebpageModel
@inject IDocumentMetadataService DocumentMetadataService
@{
    ViewBag.Title = "Add Webpage";
    var parent = ViewData["parent"] as Webpage;
    //pre select radio if there is only one option
    var types = ViewData["DocumentTypes"] as List<DocumentTypeToAdd>;
    if (types.Count == 1)
    {
        Model.DocumentType = types.First().DocumentType;
    }

}

<form asp-controller="Webpage" asp-action="Add" method="post" data-add-webpage autocomplete="off">

    <admin-header>
        <row>
            <admin-header-title title="@await Html.Resource("admin-addpage-to", "Add page to") @(parent != null ? parent.Name : await Html.Resource("admin-root", "Root"))"/>

            <admin-header-actions>
                <input type="submit" class="btn-primary btn hide-until-document-selected " value="@await Html.Resource("Save")" style="display: none;"/>
            </admin-header-actions>
        </row>
    </admin-header>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    @foreach (var documentType in types)
                    {
                        var inputId = documentType.DocumentType + documentType.TemplateId;
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="DocumentType" id="dt-@inputId" value="@documentType.DocumentType" data-page-template-id="@documentType.TemplateId">
                            <label class="form-check-label" for="dt-@inputId">
                                <i class="@documentType.Type.IconClass"></i>
                                @documentType.DisplayName
                            </label>
                        </div>
                    }
                    @Html.HiddenFor(x => x.PageTemplateId)
                </div>

                <div class="col-lg-9 hide-until-document-selected" style="display: none;">
                    <div class="form-group">
                        <input type="hidden" asp-for="ParentId"/>
                        <label asp-for="Name"></label>
                        <input type="text" asp-for="Name" class="form-control" autocomplete="off"/>
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UrlSegment"></label>
                        <input type="text" asp-for="UrlSegment" class="form-control" autocomplete="off"/>
                        <span asp-validation-for="UrlSegment"></span>
                    </div>
                    <div class="checkbox">
                        <label>
                            @if (parent != null && DocumentMetadataService.GetMetadata(parent).ChildrenMaintainHierarchy == true)
                            {
                                <input type="checkbox" name="mode" id="mode" value="1" checked/>
                            }
                            else
                            {
                                <input type="checkbox" name="mode" id="mode" value="1"/>
                            }
                            Maintain Hierarchy
                        </label>
                    </div>
                    <div data-additional-properties="true">
                    </div>
                </div>
                <div class="col-lg-10" id="message-choose-document">
                    <p>@await Html.Resource("Admin Webpage Please select a document type", "Please select a document type")</p>
                </div>

            </div>

        </div>
    </div>
</form>